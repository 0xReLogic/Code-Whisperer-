{
  "name": "code-whisperer",
  "displayName": "Code Whisperer",
  "description": "Intelligent IDE extension that learns your coding patterns and provides personalized suggestions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "machine learning",
    "code completion",
    "pattern recognition",
    "personalized suggestions",
    "coding assistant",
    "webassembly",
    "rust"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeWhisperer.analyzeCode",
        "title": "Analyze Code with Code Whisperer"
      },
      {
        "command": "codeWhisperer.showPatterns",
        "title": "Show Learned Patterns"
      },
      {
        "command": "codeWhisperer.toggleSuggestions",
        "title": "Toggle Pattern Suggestions"
      },
      {
        "command": "codeWhisperer.openDashboard",
        "title": "Open Pattern Statistics Dashboard"
      },
      {
        "command": "codeWhisperer.resetLearning",
        "title": "Reset Learned Patterns"
      },
      {
        "command": "codeWhisperer.exportPatterns",
        "title": "Export Learned Patterns"
      },
      {
        "command": "codeWhisperer.importPatterns",
        "title": "Import Learned Patterns"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeWhisperer.analyzeCode",
          "when": "editorHasSelection",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "codeWhisperer.analyzeCode",
          "when": "editorIsOpen"
        },
        {
          "command": "codeWhisperer.showPatterns"
        },
        {
          "command": "codeWhisperer.toggleSuggestions"
        },
        {
          "command": "codeWhisperer.openDashboard"
        },
        {
          "command": "codeWhisperer.resetLearning"
        },
        {
          "command": "codeWhisperer.exportPatterns"
        },
        {
          "command": "codeWhisperer.importPatterns"
        }
      ]
    },
    "configuration": {
      "title": "Code Whisperer",
      "properties": {
        "codeWhisperer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Code Whisperer pattern analysis and suggestions"
        },
        "codeWhisperer.realTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time pattern analysis as you type"
        },
        "codeWhisperer.suggestionDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before showing suggestions"
        },
        "codeWhisperer.maxSuggestions": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of suggestions to show"
        },
        "codeWhisperer.confidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Minimum confidence score for showing suggestions"
        },
        "codeWhisperer.learningMode": {
          "type": "string",
          "enum": [
            "adaptive",
            "conservative",
            "aggressive"
          ],
          "default": "adaptive",
          "description": "Pattern learning behavior: adaptive (balanced), conservative (slow learning), aggressive (fast learning)"
        },
        "codeWhisperer.analysisDepth": {
          "type": "string",
          "enum": [
            "basic",
            "standard",
            "comprehensive"
          ],
          "default": "standard",
          "description": "Depth of pattern analysis: basic (fast), standard (balanced), comprehensive (thorough)"
        },
        "codeWhisperer.enabledLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "javascript",
            "typescript",
            "python",
            "rust",
            "java",
            "cpp",
            "go"
          ],
          "description": "List of programming languages to analyze"
        },
        "codeWhisperer.showProgressIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show pattern learning progress in status bar"
        },
        "codeWhisperer.enableHoverSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show pattern suggestions on hover"
        },
        "codeWhisperer.enableInlineSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show pattern suggestions inline as you type"
        },
        "codeWhisperer.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show pattern-based diagnostics and warnings"
        },
        "codeWhisperer.cacheSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of patterns to cache in memory"
        },
        "codeWhisperer.patternExpiryDays": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 365,
          "description": "Number of days after which unused patterns expire"
        },
        "codeWhisperer.enableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Enable anonymous usage analytics (helps improve the extension)"
        },
        "codeWhisperer.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'Tests pass: compilation and linting successful'",
    "package": "vsce package",
    "publish": "vsce publish",
    "build-wasm": "cd ../code-whisperer-core && wasm-pack build --target web --out-dir pkg",
    "dev": "npm run watch",
    "clean": "rimraf out && rimraf node_modules"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^4.9.4"
  }
}
